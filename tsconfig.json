{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "ES2020",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "strict": true,
    "target": "ES2022",
  },
  "include": ["src/**/*"],
}
