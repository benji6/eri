{
  "compilerOptions": {
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "ES2020",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "esm",
    "strict": true,
    "target": "ES2021"
  },
  "include": ["src/**/*"]
}
