{
  "name": "eri",
  "version": "0.0.0",
  "description": "A minimal design system",
  "main": "dist",
  "module": "esm",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist esm && run-p build:*",
    "build:css": "parcel build --no-optimize --no-source-maps --target css && mkdir -p dist && mv css-build/index.css dist && rm -r css-build",
    "build:js": "run-p build:js:compile:* && run-p build:js:clean",
    "build:js:clean": "node scripts/removeCssImports",
    "build:js:compile:cjs": "tsc",
    "build:js:compile:esm": "tsc -m es6 --outDir esm",
    "fmt": "yarn test:lint:css --fix && yarn test:lint:scripts --fix && prettier --write '**/*'",
    "start": "parcel --open --target styleguide",
    "style-guide:build": "rm -rf build && parcel build --no-source-maps --target styleguide",
    "test": "run-p test:*",
    "test:audit": "yarn audit --level critical || [ $? -lt 16 ]",
    "test:fmt": "prettier --check '**/*'",
    "test:lint": "run-p test:lint:*",
    "test:lint:css": "stylelint '**/*.css'",
    "test:lint:scripts": "eslint --ext js,ts,tsx .",
    "test:types": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benji6/eri.git"
  },
  "author": "benji6",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benji6/eri/issues"
  },
  "homepage": "https://github.com/benji6/eri#readme",
  "browserslist": "cover 85%",
  "targets": {
    "css": {
      "distDir": "css-build",
      "source": "src/index.ts"
    },
    "styleguide": {
      "distDir": "build",
      "source": "docs/index.html"
    }
  },
  "dependencies": {
    "react-transition-group": "^4.4.1"
  },
  "devDependencies": {
    "@reach/router": "^1.2.1",
    "@types/reach__router": "^1.3.10",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.9",
    "@types/react-transition-group": "^4.4.2",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "highlight.js": "^11.4.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.3.1",
    "prettier": "^2.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-element-to-jsx-string": "^14.1.0",
    "semantic-release": "^19.0.2",
    "stylelint": "^14.5.1",
    "stylelint-config-recommended": "^7.0.0",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "@reach/router": "^1.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
