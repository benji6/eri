{
  "name": "eri",
  "version": "0.0.0",
  "description": "A minimal design system",
  "main": "dist",
  "module": "esm",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist esm && run-p build:*",
    "build:css": "parcel build src/index.ts --no-minify --no-source-maps -d css-build && mkdir -p dist && mv css-build/index.css $_ && rm -r css-build",
    "build:js": "run-p build:js:compile:* && run-p build:js:clean:**",
    "build:js:compile:cjs": "tsc",
    "build:js:compile:esm": "tsc -m es6 --outDir esm",
    "build:js:clean:css-imports": "node scripts/removeCssImports",
    "build:js:clean:css-requires:cjs": "BABEL_ENV=css babel dist --out-dir dist",
    "build:js:clean:css-requires:esm": "BABEL_ENV=css babel esm --out-dir esm",
    "format": "prettier --write \"**/*\"",
    "start": "parcel docs/index.html",
    "style-guide:build": "rm -rf build && parcel build docs/index.html -d build --no-source-maps",
    "test": "run-p test:*",
    "test:format": "prettier --check \"**/*\"",
    "test:lint": "tslint -c tslint.json 'docs/**/*.ts*' 'src/**/*.ts*'",
    "test:types": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benji6/eri.git"
  },
  "author": "benji6",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/benji6/eri/issues"
  },
  "homepage": "https://github.com/benji6/eri#readme",
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-transform-require-ignore": "^0.1.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.16.4",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "semantic-release": "^15.13.4",
    "tslint": "^5.13.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3333"
  },
  "peerDependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1"
  },
  "dependencies": {
    "classnames": "^2.2.6"
  }
}
